@model TandooriRecipe.Models.RecipeModel
@{
  Layout = "_Layout";
}

<div class="text-purple-800 text-6xl" style="margin-left: 180px; margin-top: 60px"> Add New Recipe  </div>

<br>

<form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" asp-controller="TandooriRecipe" asp-action="AddRecipe"> 
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Author  
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Author"  type="text" >
    </div>
  
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Recipe ID 
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="RecipeId" type="number" >
    </div>
    
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" >
        Recipe Name  
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Name" type="text" >
    </div>
    
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" >
        Ingredients Used  
      </label>
      <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Ingredients"  type="text" > </textarea>
    </div>
    
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Directions  
      </label>
      <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"  asp-for="Directions" type="text" > </textarea>
    </div>
    
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Time Required 
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="TimeRequired" type="number" >
    </div>
    
    
    <div class="mb-4 btn-container">
      <button class="btn-success btn-lg text-center btnAddRecipe" type="submit" asp-controller="TandooriRecipe" asp-action="AddRecipe"> Add Recipe </button>
      <button class="btn-success btn-lg text-center btnCancel" type="submit" asp-controller="TandooriRecipe" asp-action="Index"> Cancel  </button>
    </div>
    
  </form>
  

